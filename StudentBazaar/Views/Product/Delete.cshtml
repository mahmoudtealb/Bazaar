@model StudentBazaar.Entities.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-danger">
        <i class="bi bi-trash3 me-2"></i>Delete Product
    </h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div>

<div class="alert alert-danger">
    Are you sure you want to delete this product?
</div>

<div class="card p-3 mb-3">
    <h4>@Model.Name</h4>
    <p><strong>Category:</strong> @Model.Category?.CategoryName ?? "N/A"</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Images:</strong> @(Model.Images?.Count ?? 0)</p>
</div>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
