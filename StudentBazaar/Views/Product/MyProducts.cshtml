@model IEnumerable<StudentBazaar.Entities.Models.Product>

@{
    ViewData["Title"] = "Products for Sale";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Products for Sale</h2>
            <p class="text-muted mb-0">
                Manage your products that are available for sale.
            </p>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Products for Buy
            </a>
            <a asp-action="Create" class="btn btn-success">
                + Add New Product
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>You haven't added any products yet.</p>
            <a asp-action="Create" class="btn btn-primary">Add Your First Product ðŸŽ¯</a>
        </div>
    }
    else
    {
        <form asp-action="MyProducts" method="get" class="mb-3">
            <div class="row g-2 align-items-end">
                <div class="col-md-10">
                    <label class="form-label">Search My Products</label>
                    <input type="text" name="q" value="@ViewBag.CurrentQuery" class="form-control" placeholder="Enter product name" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">

            @foreach (var item in Model)
            {
                var mainImage = item.Images?.FirstOrDefault(img => img.IsMainImage)
                ?? item.Images?.FirstOrDefault();

                var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                bool canManage = User.IsInRole("Admin") ||
                (currentUserId != null &&
                item.OwnerId.HasValue &&
                item.OwnerId.Value.ToString() == currentUserId);

                <div class="col">
                    <div class="card h-100 border-0 shadow-sm product-card">

                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="text-decoration-none text-dark">
                            <div class="ratio ratio-4x3">
                                @if (mainImage != null)
                                {
                                    <img src="@mainImage.ImageUrl"
                                         class="card-img-top img-fluid"
                                         style="object-fit: cover;"
                                         alt="@item.Name"
                                         onerror="this.src='/images/placeholder.png'; this.onerror=null;" />
                                }
                                else
                                {
                                    <div class="d-flex justify-content-center align-items-center bg-light">
                                        <span class="text-muted">No image</span>
                                    </div>
                                }
                            </div>

                            <div class="card-body">
                                <h5 class="card-title mb-1 fw-semibold">@item.Name</h5>
                                <p class="text-muted mb-1">
                                    @item.Category?.CategoryName
                                </p>
                                <p class="mb-0 fw-bold text-success">
                                    @item.Price EGP
                                </p>
                                <div class="mt-2 mb-1">
                                    @if (item.IsApproved)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock"></i> Pending Approval
                                        </span>
                                    }
                                    @if (item.IsSold)
                                    {
                                        <span class="badge bg-danger ms-1">
                                            <i class="bi bi-x-circle"></i> Sold
                                        </span>
                                    }
                                    @if (item.IsFeatured)
                                    {
                                        <span class="badge bg-info ms-1">
                                            <i class="bi bi-star"></i> Featured
                                        </span>
                                    }
                                </div>
                                <p class="text-muted small mb-0 mt-1">
                                    @(item.Listings?.Count(l => l.Status == StudentBazaar.Entities.Models.ListingStatus.Available) ?? 0) Active Listing(s)
                                </p>
                            </div>
                        </a>

                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center pt-0 pb-3 px-3">
                            <a asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm">
                                View
                            </a>

                            @if (canManage)
                            {
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            }

        </div>
    }
</div>

@section Scripts {
    <style>
        .product-card {
            border-radius: 18px;
            overflow: hidden;
            transition: transform .15s ease, box-shadow .15s ease;
        }

            .product-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 25px rgba(0,0,0,0.08);
            }
    </style>
}

