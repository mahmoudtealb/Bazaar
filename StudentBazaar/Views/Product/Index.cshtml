@model IEnumerable<StudentBazaar.Web.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2 class="mt-3">Products</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Add New Product</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>No products found. <a asp-action="Create">Create your first product</a> to get started.</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width:80px">Image</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Images</th>
                    <th>Listings</th>
                    <th>Ratings</th>
                    <th style="width:220px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var mainImage = item.Images?.FirstOrDefault(img => img.IsMainImage) ?? item.Images?.FirstOrDefault();
                    <tr>
                        <td>
                            @if (mainImage != null)
                            {
                                <img src="@mainImage.ImageUrl" alt="@item.Name"
                                     class="img-thumbnail"
                                     style="width: 60px; height: 60px; object-fit: cover;"
                                     onerror="this.src='/images/placeholder.png'; this.onerror=null;" />
                            }
                            else
                            {
                                <span class="text-muted small">No image</span>
                            }
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Category?.CategoryName</td>
                        <td><strong class="text-success">@item.Price.ToString("C")</strong></td>
                        <td><span class="badge bg-info">@(item.Images?.Count ?? 0)</span></td>
                        <td><span class="badge bg-secondary">@(item.Listings?.Count ?? 0)</span></td>
                        <td><span class="badge bg-warning text-dark">@(item.Ratings?.Count ?? 0)</span></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
