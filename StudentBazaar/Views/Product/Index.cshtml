@model IEnumerable<StudentBazaar.Entities.Models.Product>

@{
    ViewData["Title"] = "Products for Buy";
}

<div class="container py-5">

    <!-- ===================================================== -->
    <!--                         HEADER                        -->
    <!-- ===================================================== -->
    <div class="bg-white p-4 rounded-4 shadow-sm mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold mb-1 text-primary">Products for Buy</h2>
            <p class="text-muted mb-0">Explore items available from other sellers.</p>
        </div>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Sell an Item
            </a>
        }
    </div>

    <!-- ===================================================== -->
    <!--                   SEARCH & FILTER                     -->
    <!-- ===================================================== -->
    <div class="bg-white p-4 rounded-4 shadow-sm mb-4">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Search Product</label>
                    <input type="text" name="q" class="form-control form-control-lg rounded-pill"
                           placeholder="üîç Enter product name" value="@ViewBag.CurrentQuery" />
                </div>

                <div class="col-md-4">
                    <label class="form-label fw-semibold">College</label>
                    <select name="collegeId" class="form-select form-select-lg rounded-pill">
                        <option value="">All Colleges</option>
                        @foreach (var c in (IEnumerable<StudentBazaar.Entities.Models.College>)ViewBag.Colleges)
                        {
                            var selected = (ViewBag.CurrentCollegeId != null && (int)ViewBag.CurrentCollegeId == c.Id)
                            ? "selected" : "";

                            <option value="@c.Id" selected="@selected">@c.CollegeName</option>
                        }
                    </select>
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                        Search
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- ===================================================== -->
    <!--                     EMPTY MESSAGE                     -->
    <!-- ===================================================== -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5 rounded-4 shadow-sm">
            <h5 class="fw-bold mb-2">ŸÑÿß ÿ™Ÿàÿ¨ÿØ ŸÖŸÜÿ™ÿ¨ÿßÿ™ ÿ≠ÿßŸÑŸäÿßŸã</h5>
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <p class="mb-0">ÿßÿ®ÿØÿ£ Ÿà <a asp-action="Create" class="fw-bold">ÿ£ÿ∂ŸÅ ÿ£ŸàŸÑ ŸÖŸÜÿ™ÿ¨</a> üéØ</p>
            }
            else
            {
                <p class="mb-0">
                    ÿ≥ÿ¨ŸëŸÑ ÿØÿÆŸàŸÑŸÉ ŸÑŸÑÿ¥ÿ±ÿßÿ° ÿ£Ÿà ÿßŸÑÿ®Ÿäÿπ
                    <a asp-controller="Account" asp-action="Login" class="fw-bold">Login</a>
                </p>
            }
        </div>
    }
    else
    {
        <!-- ===================================================== -->
        <!--                     PRODUCT GRID                      -->
        <!-- ===================================================== -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var mainImg = item.Images?.FirstOrDefault(i => i.IsMainImage) ?? item.Images?.FirstOrDefault();
                var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                bool canManage = User.IsInRole("Admin") ||
                (item.OwnerId != null && item.OwnerId.ToString() == userId);

                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="product-card shadow-sm rounded-4 overflow-hidden bg-white h-100">

                        <!-- Product Image -->
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <div class="product-image-wrapper">
                                @if (mainImg != null)
                                {
                                    <img src="@mainImg.ImageUrl" class="product-image"
                                         alt="@item.Name" onerror="this.src='/images/placeholder.png'" />
                                }
                                else
                                {
                                    <div class="product-image-empty">No Image</div>
                                }
                            </div>
                        </a>

                        <!-- Product Body -->
                        <div class="p-3">
                            <h5 class="fw-bold mb-1 text-dark">@item.Name</h5>
                            <p class="text-muted mb-1">@item.Category?.CategoryName</p>
                            <p class="fw-bold text-success fs-5">@item.Price</p>
                        </div>

                        <!-- Buttons -->
                        <div class="px-3 pb-3 d-flex justify-content-between">

                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                                View
                            </a>

                            @if (canManage)
                            {
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-outline-warning btn-sm rounded-pill">Edit</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-outline-danger btn-sm rounded-pill">Delete</a>
                                </div>
                            }
                            else if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="btn-group">
                                    <a asp-controller="Chat" asp-action="WithSeller"
                                       asp-route-productId="@item.Id"
                                       class="btn btn-warning btn-sm rounded-pill">Contact</a>

                                    <form asp-controller="Cart" asp-action="AddProductToCart" method="post">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit"
                                                class="btn btn-success btn-sm rounded-pill px-3">
                                            Add
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .product-card {
        transition: .2s ease;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

    .product-image-wrapper {
        height: 220px;
        overflow: hidden;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: .25s ease;
    }

        .product-image:hover {
            transform: scale(1.05);
        }

    .product-image-empty {
        background: #f8f9fa;
        color: #999;
        height: 220px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.1rem;
        font-weight: 500;
    }
</style>
