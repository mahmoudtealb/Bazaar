@model StudentBazaar.Web.ViewModels.ProductCreateViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-pencil-square me-2"></i>Edit Product
    </h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
    <input type="hidden" asp-for="Product.Id" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">Product Name *</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.CategoryId" class="form-label">Category *</label>
                <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.Categories">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label">Price *</label>
                <input asp-for="Product.Price" type="number" step="0.01" min="0.01" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <!-- Product Type: Sale or Rent -->
            <div class="mb-3">
                <label class="form-label">Product Type *</label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="Product.IsForRent" value="false" id="forSale" @(!Model.Product.IsForRent ? "checked" : "") />
                    <label class="form-check-label" for="forSale">
                        For Sale
                    </label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="Product.IsForRent" value="true" id="forRent" @(Model.Product.IsForRent ? "checked" : "") />
                    <label class="form-check-label" for="forRent">
                        For Rent
                    </label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Files" class="form-label">Upload New Images (Optional)</label>
                <input asp-for="Files" type="file" multiple accept="image/*" class="form-control" id="editImageInput" />
                <small class="form-text text-muted">You can select multiple images. Accepted formats: JPG, PNG, GIF, WEBP</small>
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-warning">Update Product</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header"><strong>Existing Images</strong></div>
                <div class="card-body">
                    @if (Model.Product.Images != null && Model.Product.Images.Any())
                    {
                        <div class="row g-2">
                            @foreach (var img in Model.Product.Images)
                            {
                                <div class="col-6 text-center" id="img-wrap-@img.Id">
                                    <img src="@img.ImageUrl" class="img-thumbnail w-100" style="height:120px; object-fit:cover" />
                                    <div class="mt-1">
                                        @if (img.IsMainImage)
                                        {
                                            <span class="badge bg-success">Main</span>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-primary set-main-btn" data-id="@img.Id">Set Main</button>
                                        }
                                        <button type="button" class="btn btn-sm btn-outline-danger delete-image-btn" data-id="@img.Id">Delete</button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No images yet.</p>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header"><strong>New Image Preview</strong></div>
                <div class="card-body">
                    <div id="editImagePreview" style="min-height: 100px; display: flex; flex-wrap: wrap; gap: 8px; align-items: flex-start;">
                        <p class="text-muted small" style="width: 100%; margin: 0;">Selected images will appear here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const editInput = document.getElementById('editImageInput');
            const preview = document.getElementById('editImagePreview');

            if (editInput && preview) {
                editInput.addEventListener('change', function (e) {
                    preview.innerHTML = '';
                    const files = e.target.files;
                    if (!files || files.length === 0) {
                        preview.innerHTML = '<p class="text-muted small">Selected images will appear here</p>';
                        return;
                    }
                    for (let i = 0; i < files.length; i++) {
                        const file = files[i];
                        if (file && file.type && file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = function (event) {
                                const imgContainer = document.createElement('div');
                                imgContainer.style.cssText = 'position: relative; margin: 8px; display: inline-block;';
                                
                                const img = document.createElement('img');
                                img.src = event.target.result;
                                img.className = 'img-thumbnail';
                                img.style.cssText = 'max-width: 150px; max-height: 150px; width: auto; height: auto; object-fit: contain; border: 1px solid #dee2e6; border-radius: 4px; display: block;';
                                
                                imgContainer.appendChild(img);
                                preview.appendChild(imgContainer);
                            };
                            reader.readAsDataURL(file);
                        }
                    }
                });
            }

            // AJAX delete image
            document.querySelectorAll('.delete-image-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    const id = e.target.getAttribute('data-id');
                    if (!confirm('Delete this image?')) return;
                    const res = await fetch('@Url.Action("DeleteImage", "Product")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        body: JSON.stringify({ imageId: parseInt(id) })
                    });
                    if (res.ok) {
                        document.getElementById('img-wrap-' + id).remove();
                    } else {
                        alert('Failed to delete image.');
                    }
                });
            });

            // AJAX set main
            document.querySelectorAll('.set-main-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    const id = e.target.getAttribute('data-id');
                    const res = await fetch('@Url.Action("SetMainImage", "Product")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        body: JSON.stringify({ imageId: parseInt(id) })
                    });
                    if (res.ok) {
                        location.reload();
                    } else {
                        alert('Failed to set main image.');
                    }
                });
            });
        });
    </script>
}
