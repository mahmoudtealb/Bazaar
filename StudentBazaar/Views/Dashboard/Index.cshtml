@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">👥 Total Users</h5>
            </div>
            <div class="card-body">
                <h2 class="mb-0">@ViewBag.UsersCount</h2>
                <small class="text-white-50">Registered users</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">📦 Total Products</h5>
            </div>
            <div class="card-body">
                <h2 class="mb-0">@ViewBag.ProductsCount</h2>
                <small class="text-white-50">Available products</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3 shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">🛒 Total Orders</h5>
            </div>
            <div class="card-body">
                <h2 class="mb-0">@ViewBag.OrdersCount</h2>
                <small class="text-white-50">All orders</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-3 shadow-sm">
            <div class="card-header">
                <h5 class="mb-0">💰 Total Revenue</h5>
            </div>
            <div class="card-body">
                <h2 class="mb-0">@((decimal)ViewBag.Revenue)</h2>
                <small class="text-white-50">Completed orders</small>
            </div>
        </div>
    </div>
</div>
