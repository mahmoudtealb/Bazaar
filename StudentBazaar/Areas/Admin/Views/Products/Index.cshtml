@model List<StudentBazaar.Entities.Models.Product>
@{
    ViewData["Title"] = "Products Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Products Management</h1>
        <div class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            Total Products: <strong>@ViewBag.TotalCount</strong>
        </div>
    </div>

    <partial name="_AdminAlerts" />

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search Products</label>
                    <input type="text" name="search" class="form-control" placeholder="Search products..." value="@ViewContext.HttpContext.Request.Query["search"]">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in ViewBag.Categories as List<StudentBazaar.Entities.Models.ProductCategory>)
                            {
                                var isSelected = ViewContext.HttpContext.Request.Query["categoryId"].ToString() == cat.Id.ToString();
                                <option value="@cat.Id" selected="@isSelected">@cat.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="isApproved" class="form-select">
                        <option value="">All Status</option>
                        @{
                            var isApprovedSelected = ViewContext.HttpContext.Request.Query["isApproved"].ToString() == "true";
                            var isPendingSelected = ViewContext.HttpContext.Request.Query["isApproved"].ToString() == "false";
                        }
                        <option value="true" selected="@isApprovedSelected">Approved</option>
                        <option value="false" selected="@isPendingSelected">Pending</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Table -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-box me-2"></i>
                Products (@ViewBag.TotalCount total)
            </h6>
            <span class="badge bg-info">Page @ViewBag.Page of @ViewBag.TotalPages</span>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                @* <th style="width: 80px;">
                                     <i class="fas fa-hashtag me-1"></i> ID 
                                </th> *@
                                <th style ="width: 80px;">
                                    <i class="fas fa-tag me-1"></i> Name
                                </th>
                                <th style="width: 150px;">
                                    <i class="fas fa-folder me-1"></i> Category
                                </th>
                                <th style="width: 120px;">
                                    <i class="fas  me-1"></i> Price
                                </th>
                                <th style="width: 200px;">
                                    <i class="fas fa-info-circle me-1"></i> Status
                                </th>
                                <th style="width: 300px;">
                                    <i class="fas fa-cog me-1"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    @* <td><strong>@product.Id</strong></td> *@
                                    <td>
                                        <strong class="text-primary">@product.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-folder me-1"></i>
                                            @(product.Category?.CategoryName ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <strong class="text-success">@product.Price.ToString("F2") EGP</strong>
                                    </td>
                                    <td>
                                        @if (product.IsApproved)
                                        {
                                            <span class="badge bg-success me-1">
                                                <i class="fas fa-check-circle me-1"></i> Approved
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning me-1">
                                                <i class="fas fa-clock me-1"></i> Pending
                                            </span>
                                        }
                                        @if (product.IsSold)
                                        {
                                            <span class="badge bg-danger me-1">
                                                <i class="fas fa-shopping-cart me-1"></i> Sold
                                            </span>
                                        }
                                        @if (product.IsFeatured)
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-star me-1"></i> Featured
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            @if (!product.IsApproved)
                                            {
                                                <form asp-action="Approve" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@product.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Approve Product">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="MakeFeatured" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-sm btn-warning" title="@(product.IsFeatured ? "Unfeature" : "Feature") Product">
                                                    <i class="fas fa-star"></i> @(product.IsFeatured ? "Unfeature" : "Feature")
                                                </button>
                                            </form>
                                            @if (product.IsSold)
                                            {
                                                <form asp-action="MarkAsUnsold" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@product.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Mark as Unsold">
                                                        <i class="fas fa-undo"></i> Unsold
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="MarkAsSold" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@product.Id" />
                                                    <button type="submit" class="btn btn-sm btn-secondary" title="Mark as Sold">
                                                        <i class="fas fa-check-double"></i> Sold
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @{
                                var search = ViewContext.HttpContext.Request.Query["search"].ToString();
                                var categoryId = ViewContext.HttpContext.Request.Query["categoryId"].ToString();
                                var isApproved = ViewContext.HttpContext.Request.Query["isApproved"].ToString();
                            }
                            
                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page - 1, search = search, categoryId = categoryId, isApproved = isApproved })">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = search, categoryId = categoryId, isApproved = isApproved })">@i</a>
                                </li>
                            }

                            @if (ViewBag.Page < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page + 1, search = search, categoryId = categoryId, isApproved = isApproved })">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Try adjusting your search or filter criteria.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
    
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .badge {
        padding: 0.4em 0.6em;
        font-weight: 500;
        font-size: 0.85rem;
    }
    
    .btn-group .btn {
        margin-right: 2px;
    }
    
    .btn-group .btn:last-child {
        margin-right: 0;
    }
</style>
