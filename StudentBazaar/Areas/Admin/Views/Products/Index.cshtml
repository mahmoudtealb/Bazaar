@model List<StudentBazaar.Entities.Models.Product>
@{
    ViewData["Title"] = "Products Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid page-container">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">Products Management</h1>
        <div class="text-muted">
            <i class="bi bi-info-circle me-1"></i>
            Total Products: <strong>@ViewBag.TotalCount</strong>
        </div>
    </div>

    <partial name="_AdminAlerts" />

    <!-- Filters -->
    <div class="card shadow filter-section">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Products</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-4">
                    <label class="form-label">Search Products</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" name="search" class="form-control" placeholder="Search products..." value="@ViewContext.HttpContext.Request.Query["search"]">
                    </div>
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">All Categories</option>
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var cat in ViewBag.Categories as List<StudentBazaar.Entities.Models.ProductCategory>)
                            {
                                var isSelected = ViewContext.HttpContext.Request.Query["categoryId"].ToString() == cat.Id.ToString();
                                <option value="@cat.Id" selected="@isSelected">@cat.CategoryName</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3">
                    <label class="form-label">Status</label>
                    <select name="isApproved" class="form-select">
                        <option value="">All Status</option>
                        @{
                            var isApprovedSelected = ViewContext.HttpContext.Request.Query["isApproved"].ToString() == "true";
                            var isPendingSelected = ViewContext.HttpContext.Request.Query["isApproved"].ToString() == "false";
                        }
                        <option value="true" selected="@isApprovedSelected">Approved</option>
                        <option value="false" selected="@isPendingSelected">Pending</option>
                    </select>
                </div>

                <div class="col-12 col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="card shadow table-section">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-box-seam me-2"></i>
                Products (@ViewBag.TotalCount total)
            </h5>
            <span class="badge bg-info">Page @ViewBag.Page of @ViewBag.TotalPages</span>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <!-- 4 Products per row -->
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

                    @foreach (var product in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">

                                <div class="card-body">
                                    <h5 class="card-title text-primary">@product.Name</h5>

                                    <p class="mb-1">
                                        <span class="badge bg-secondary">@product.Category?.CategoryName</span>
                                    </p>

                                    <p class="text-success fw-bold">@product.Price.ToString("F2") EGP</p>

                                    <!-- Status -->
                                    <div class="mb-2">
                                        @if (product.IsApproved)
                                        {
                                            <span class="badge bg-success me-1">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning me-1">Pending</span>
                                        }

                                        @if (product.IsSold)
                                        {
                                            <span class="badge bg-danger me-1">Sold</span>
                                        }

                                        @if (product.IsFeatured)
                                        {
                                            <span class="badge bg-info">Featured</span>
                                        }
                                    </div>

                                    <!-- Actions -->
                                    <div class="d-grid gap-2">

                                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm">
                                            <i class="bi bi-eye me-1"></i> View
                                        </a>

                                        @if (!product.IsApproved)
                                        {
                                            <form asp-action="Approve" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                            </form>
                                        }

                                        <form asp-action="MakeFeatured" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                @(product.IsFeatured ? "Unfeature" : "Feature")
                                            </button>
                                        </form>

                                        @if (product.IsSold)
                                        {
                                            <form asp-action="MarkAsUnsold" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">Unsold</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="MarkAsSold" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@product.Id" />
                                                <button type="submit" class="btn btn-secondary btn-sm">Sold</button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @{
                                var search = ViewContext.HttpContext.Request.Query["search"].ToString();
                                var categoryId = ViewContext.HttpContext.Request.Query["categoryId"].ToString();
                                var isApproved = ViewContext.HttpContext.Request.Query["isApproved"].ToString();
                            }

                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page - 1, search = search, categoryId = categoryId, isApproved = isApproved })">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = search, categoryId = categoryId, isApproved = isApproved })">@i</a>
                                </li>
                            }

                            @if (ViewBag.Page < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.Page + 1, search = search, categoryId = categoryId, isApproved = isApproved })">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No products found</h5>
                    <p class="text-muted">Try adjusting your search or filter criteria.</p>
                </div>
            }
        </div>
    </div>
</div>

