@model List<StudentBazaar.Entities.Models.Order>
@{
    ViewData["Title"] = "Orders Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid page-container">
    <div class="page-header">
        <h1 class="h3">Orders Management</h1>
    </div>

    <!-- Statistics -->
    <div class="stats-grid section-spacing">
        <div class="stat-card success">
            <div class="stat-label">Total Revenue</div>
            <div class="stat-value">@ViewBag.TotalRevenue.ToString("F2") EGP</div>
        </div>
        <div class="stat-card info">
            <div class="stat-label">Monthly Revenue</div>
            <div class="stat-value">@ViewBag.MonthlyRevenue.ToString("F2") EGP</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow filter-section">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Orders</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["fromDate"]">
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["toDate"]">
                </div>
                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow table-section">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-cart-check me-2"></i>Orders List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive table-container">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                          @*   <th>Order ID</th> *@
                            <th>Buyer</th>
                            <th>Product</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                               @*  <td>#@order.Id</td> *@
                                <td data-label="Buyer">@order.Buyer?.FullName</td>
                                <td data-label="Product">
                                    @if (order.OrderItems != null && order.OrderItems.Any())
                                    {
                                        var firstItem = order.OrderItems.First();
                                        <text>@firstItem.ProductName</text>
                                        @if (order.OrderItems.Count > 1)
                                        {
                                            <text> (+@(order.OrderItems.Count - 1) more)</text>
                                        }
                                    }
                                    else
                                    {
                                        <text>No items</text>
                                    }
                                </td>
                                <td data-label="Amount"><strong>@order.TotalAmount.ToString("F2") </strong></td>
                                <td data-label="Status">
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            StudentBazaar.Entities.Models.OrderStatus.Pending => "warning",
                                            //StudentBazaar.Entities.Models.OrderStatus.Approved => "info",
                                            StudentBazaar.Entities.Models.OrderStatus.Shipped => "primary",
                                            StudentBazaar.Entities.Models.OrderStatus.Delivered => "success",
                                            StudentBazaar.Entities.Models.OrderStatus.Completed => "success",
                                            StudentBazaar.Entities.Models.OrderStatus.Cancelled => "danger",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@order.Status</span>
                                </td>
                                <td data-label="Date">@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td data-label="Actions">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info" title="View Order Details">
                                        <i class="bi bi-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

