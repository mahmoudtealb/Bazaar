@model StudentBazaar.Entities.Models.University
@{
    ViewData["Title"] = "University Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">University Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
               @*  <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd> *@

                <dt class="col-sm-3">University Name</dt>
                <dd class="col-sm-9"><strong>@Model.UniversityName</strong></dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3">Colleges Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@(Model.Colleges?.Count ?? 0) college(s)</span>
                </dd>

                <dt class="col-sm-3">Users Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">@(Model.Users?.Count ?? 0) user(s)</span>
                </dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Updated At</dt>
                <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
            </dl>

            @if (Model.Colleges != null && Model.Colleges.Any())
            {
                <hr />
                <h5 class="mb-3">Associated Colleges</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                @* <th>ID</th> *@
                                <th>College Name</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var college in Model.Colleges.Take(10))
                            {
                                <tr>
                                   @*  <td>@college.Id</td> *@
                                    <td>@college.CollegeName</td>
                                    <td>@college.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Colleges.Count > 10)
                    {
                        <p class="text-muted">Showing first 10 of @Model.Colleges.Count colleges.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

