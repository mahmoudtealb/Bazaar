@using StudentBazaar.Web.Models
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="~/css/bootstrap.min (3).css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/ui-enhancements.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        :root {
            --admin-primary: #4e73df;
            --admin-success: #1cc88a;
            --admin-info: #36b9cc;
            --admin-warning: #f6c23e;
            --admin-danger: #e74a3b;
            --admin-secondary: #858796;
            --admin-light: #f8f9fc;
            --admin-dark: #5a5c69;
        }

        body {
            background-color: var(--admin-light);
        }

        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--admin-primary) 10%, #224abe 100%);
            color: white;
            width: 224px;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,.8);
            padding: 6px 10px;
            margin: 0.15rem 0.4rem;
            border-radius: 0.35rem;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0;
            font-size: 13px;
        }

        .sidebar .nav-link i {
            width: 20px;
            height: 20px;
            text-align: center;
            font-size: 18px;
            flex-shrink: 0;
            margin-right: 8px;
        }

        .sidebar .nav-link span {
            white-space: nowrap;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255,255,255,.15);
            transform: translateX(5px);
        }

        .main-content {
            margin-left: 224px;
            padding: 1.5rem;
            margin-top: 48px; /* Space for top navbar */
        }

        /* Top Navbar Styles */
        .admin-top-navbar {
            margin-left: 224px;
            padding: 6px 20px;
            position: fixed;
            top: 0;
            right: 0;
            left: 224px;
            z-index: 1000;
            height: 48px;
        }

        /* Compact Navbar Styles */
        .admin-top-navbar .nav-link {
            font-size: 13px;
            padding: 4px 8px;
            color: #495057;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .admin-top-navbar .nav-link:hover {
            color: var(--admin-primary);
            background-color: rgba(78, 115, 223, 0.1);
            border-radius: 4px;
        }

        .admin-top-navbar i, .admin-top-navbar svg {
            width: 16px;
            height: 16px;
            font-size: 0.875rem;
        }

        .admin-top-navbar .nav-item {
            margin-right: 6px;
        }

        /* Search Box Styles */
        .admin-search-form {
            max-width: none;
            margin: 0 15px;
        }

        .admin-search-group {
            height: 32px;
            width: 100%;
        }

        .admin-search-input {
            font-size: 13px;
            padding: 4px 12px;
            border-radius: 0;
        }

        .admin-search-group .input-group-text {
            border-radius: 20px 0 0 20px;
            padding: 4px 12px;
            font-size: 0.8rem;
            color: #6c757d;
        }

        .admin-search-btn {
            border-radius: 0 20px 20px 0;
            padding: 4px 16px;
            font-size: 13px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card {
            border-left: 4px solid;
            background: white;
            border-radius: 0.35rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .stat-card.primary { border-left-color: var(--admin-primary); }
        .stat-card.success { border-left-color: var(--admin-success); }
        .stat-card.info { border-left-color: var(--admin-info); }
        .stat-card.warning { border-left-color: var(--admin-warning); }
        .stat-card.danger { border-left-color: var(--admin-danger); }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--admin-dark);
        }

        .stat-card .stat-label {
            font-size: 0.875rem;
            color: var(--admin-secondary);
            text-transform: uppercase;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm admin-top-navbar">
        <div class="container-fluid p-0 d-flex align-items-center">
            <!-- Menu Items - Compact -->
            <ul class="navbar-nav me-2 d-flex flex-row align-items-center">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i>
                    </a>
                </li>
            </ul>

            <!-- Search Box - Expanded -->
            <form class="d-flex flex-grow-1 admin-search-form" method="get" asp-area="Admin" asp-controller="Products" asp-action="Index">
                <div class="input-group admin-search-group">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="search" class="form-control border-start-0 border-end-0 admin-search-input" 
                           placeholder="Search products, users, orders..." value="@ViewContext.HttpContext.Request.Query["search"]">
                    <button class="btn btn-primary border-start-0 admin-search-btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <!-- Right Side Items -->
            <ul class="navbar-nav ms-2 d-flex flex-row align-items-center">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-bell"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Product" asp-action="Index" asp-area="">
                        <i class="bi bi-person-circle"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="sidebar">
        <div class="text-center mb-3" style="padding-top: 0.5rem;">
            <h5 class="text-white mb-0" style="font-size: 1rem;">Admin Panel</h5>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" 
               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")" 
               asp-area="Admin" asp-controller="Products" asp-action="Index">
                <i class="bi bi-box-seam"></i> <span>Products</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" 
               asp-area="Admin" asp-controller="Users" asp-action="Index">
                <i class="bi bi-people"></i> <span>Users</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" 
               asp-area="Admin" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-cart-check"></i> <span>Orders</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")" 
               asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="bi bi-tags"></i> <span>Categories</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "University" ? "active" : "")" 
               asp-area="Admin" asp-controller="University" asp-action="Index">
                <i class="bi bi-building"></i> <span>Universities</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "College" ? "active" : "")" 
               asp-area="Admin" asp-controller="College" asp-action="Index">
                <i class="bi bi-mortarboard"></i> <span>Colleges</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ChatMonitoring" ? "active" : "")" 
               asp-area="Admin" asp-controller="ChatMonitoring" asp-action="Index">
                <i class="bi bi-chat-dots"></i> <span>Chat Monitoring</span>
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ActivityLogs" ? "active" : "")" 
               asp-area="Admin" asp-controller="ActivityLogs" asp-action="Index">
                <i class="bi bi-clock-history"></i> <span>Activity Logs</span>
            </a>
            <a class="nav-link" asp-controller="Product" asp-action="Index" asp-area="">
                <i class="bi bi-house-door"></i> <span>Back to Site</span>
            </a>
        </nav>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

