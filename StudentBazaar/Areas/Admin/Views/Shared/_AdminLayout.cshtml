@using StudentBazaar.Web.Models
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="~/css/bootstrap.min (3).css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        :root {
            --admin-primary: #4e73df;
            --admin-success: #1cc88a;
            --admin-info: #36b9cc;
            --admin-warning: #f6c23e;
            --admin-danger: #e74a3b;
            --admin-secondary: #858796;
            --admin-light: #f8f9fc;
            --admin-dark: #5a5c69;
        }

        body {
            background-color: var(--admin-light);
        }

        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--admin-primary) 10%, #224abe 100%);
            color: white;
            width: 224px;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,.8);
            padding: 1rem;
            margin: 0.25rem 0;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background-color: rgba(255,255,255,.1);
        }

        .main-content {
            margin-left: 224px;
            padding: 1.5rem;
        }

        .stat-card {
            border-left: 4px solid;
            background: white;
            border-radius: 0.35rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .stat-card.primary { border-left-color: var(--admin-primary); }
        .stat-card.success { border-left-color: var(--admin-success); }
        .stat-card.info { border-left-color: var(--admin-info); }
        .stat-card.warning { border-left-color: var(--admin-warning); }
        .stat-card.danger { border-left-color: var(--admin-danger); }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--admin-dark);
        }

        .stat-card .stat-label {
            font-size: 0.875rem;
            color: var(--admin-secondary);
            text-transform: uppercase;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="text-center mb-4">
            <h4 class="text-white">Admin Panel</h4>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" 
               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")" 
               asp-area="Admin" asp-controller="Products" asp-action="Index">
                <i class="fas fa-box"></i> Products
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" 
               asp-area="Admin" asp-controller="Users" asp-action="Index">
                <i class="fas fa-users"></i> Users
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" 
               asp-area="Admin" asp-controller="Orders" asp-action="Index">
                <i class="fas fa-shopping-cart"></i> Orders
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")" 
               asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="fas fa-tags"></i> Categories
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "University" ? "active" : "")" 
               asp-area="Admin" asp-controller="University" asp-action="Index">
                <i class="fas fa-university"></i> Universities
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "College" ? "active" : "")" 
               asp-area="Admin" asp-controller="College" asp-action="Index">
                <i class="fas fa-graduation-cap"></i> Colleges
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ChatMonitoring" ? "active" : "")" 
               asp-area="Admin" asp-controller="ChatMonitoring" asp-action="Index">
                <i class="fas fa-comments"></i> Chat Monitoring
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ActivityLogs" ? "active" : "")" 
               asp-area="Admin" asp-controller="ActivityLogs" asp-action="Index">
                <i class="fas fa-history"></i> Activity Logs
            </a>
            <a class="nav-link" asp-controller="Product" asp-action="Index" asp-area="">
                <i class="fas fa-home"></i> Back to Site
            </a>
        </nav>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // Set current user ID for notifications.js (admin)
        @{
            var adminUser = await UserManager.GetUserAsync(User);
        }
        window.currentUserId = '@(adminUser != null ? adminUser.Id.ToString() : "")';
        window.isAdmin = true;
    </script>
    <script src="~/js/notifications.js" asp-append-version="true"></script>
    <script>
        // Override refreshMessageCount for admin to use admin endpoint
        document.addEventListener('DOMContentLoaded', function() {
            if (window.isAdmin) {
                // Wait for notifications.js to load
                setTimeout(function() {
                    if (window.notificationSystem) {
                        const originalRefresh = window.notificationSystem.refreshMessageCount;
                        window.notificationSystem.refreshMessageCount = async function() {
                            try {
                                const response = await fetch('/Admin/Notifications/GetUnreadCount', {
                                    method: 'GET',
                                    headers: { 'Accept': 'application/json' },
                                    credentials: 'same-origin'
                                });
                                if (response.ok) {
                                    const data = await response.json();
                                    window.notificationSystem.updateBadges(data.count || 0);
                                }
                            } catch (error) {
                                console.error('Error refreshing admin message count:', error);
                            }
                        };
                        // Initial refresh
                        window.notificationSystem.refreshMessageCount();
                    }
                }, 100);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

