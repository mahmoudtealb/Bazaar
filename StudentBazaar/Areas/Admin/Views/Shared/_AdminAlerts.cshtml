@using System.Text.Encodings.Web
@* Toast notifications are handled automatically by JavaScript in _AdminLayout.cshtml *@
@* Store TempData messages in data attributes for JavaScript to read *@
@if (TempData["Success"] != null)
{
    var successMessage = TempData["Success"]?.ToString() ?? "";
    <div class="tempdata-message d-none" data-message="@HtmlEncoder.Default.Encode(successMessage)" data-type="success"></div>
}

@if (TempData["Error"] != null)
{
    var errorMessage = TempData["Error"]?.ToString() ?? "";
    <div class="tempdata-message d-none" data-message="@HtmlEncoder.Default.Encode(errorMessage)" data-type="error"></div>
}

