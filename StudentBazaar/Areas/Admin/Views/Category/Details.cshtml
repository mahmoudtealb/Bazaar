@model StudentBazaar.Entities.Models.ProductCategory
@{
    ViewData["Title"] = "Category Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Category Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                @* <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd> *@

                <dt class="col-sm-3">Category Name</dt>
                <dd class="col-sm-9"><strong>@Model.CategoryName</strong></dd>

                <dt class="col-sm-3">Products Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@(Model.Products?.Count ?? 0) product(s)</span>
                </dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Updated At</dt>
                <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
            </dl>

            @if (Model.Products != null && Model.Products.Any())
            {
                <hr />
                <h5 class="mb-3">Associated Products</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                               @*  <th>ID</th> *@
                                <th>Product Name</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products.Take(10))
                            {
                                <tr>
                                   @*  <td>@product.Id</td> *@
                                    <td>@product.Name</td>
                                    <td>@product.Price.ToString("F2") EGP</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Products.Count > 10)
                    {
                        <p class="text-muted">Showing first 10 of @Model.Products.Count products.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

