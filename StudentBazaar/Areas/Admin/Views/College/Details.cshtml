@model StudentBazaar.Entities.Models.College
@{
    ViewData["Title"] = "College Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">College Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                @* <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd> *@

                <dt class="col-sm-3">College Name</dt>
                <dd class="col-sm-9"><strong>@Model.CollegeName</strong></dd>

                <dt class="col-sm-3">University</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-primary">@(Model.University?.UniversityName ?? "N/A")</span>
                    @if (Model.University != null)
                    {
                        <span class="text-muted ms-2">(@Model.University.Location)</span>
                    }
                </dd>

                <dt class="col-sm-3">Users Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-secondary">@(Model.Users?.Count ?? 0) user(s)</span>
                </dd>

                <dt class="col-sm-3">Majors Count</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@(Model.Majors?.Count ?? 0) major(s)</span>
                </dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Updated At</dt>
                <dd class="col-sm-9">@(Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</dd>
            </dl>

            @if (Model.Majors != null && Model.Majors.Any())
            {
                <hr />
                <h5 class="mb-3">Associated Majors</h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                               @*  <th>ID</th> *@
                                <th>Major Name</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var major in Model.Majors.Take(10))
                            {
                                <tr>
                                   @*  <td>@major.Id</td> *@
                                    <td>@major.MajorName</td>
                                    <td>@major.CreatedAt.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.Majors.Count > 10)
                    {
                        <p class="text-muted">Showing first 10 of @Model.Majors.Count majors.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

